  "license": "MIT",
  "bugs": {
    "url": "https://github.com/h-dong/shiva/issues"
  },
  "homepage": "https://github.com/h-dong/shiva#readme",
  "devDependencies": {
    "rollup": "^1.23.1",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript2": "^0.24.3",
    "typescript": "^3.6.3"
  }
}
